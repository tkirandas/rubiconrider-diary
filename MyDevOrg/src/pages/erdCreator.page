<apex:page controller="ERDCreatorCtrl" sidebar="false" title="ER Diagram Creator">
    <apex:sectionHeader title="Generate perfectly layouted ER-diagrams from your Force.com database objects" subtitle="ER Diagram Creator" />
    
    <apex:pageMessages />
    
    <apex:form >
        <apex:pageMessages />
        
        <apex:pageBlock mode="maindetail" >
            <apex:pageBlockSection title="Select objects" columns="2" collapsible="false">
             
                <!-- Use opensource component https://github.com/metadaddy-sfdc/Visualforce-Multiselect-Picklist -->
                <c:MultiselectPicklist leftLabel="Accessible SObjects"
                                       leftOptions="{!accessibleSObjects}"
                                       rightLabel="Selected SObjects"
                                       rightOptions="{!selectedSObjects}"
                                       size="14"
                                       width="300px" />
                 
               	<apex:panelGrid columns="2">
               		<apex:facet name="header">
               			<apex:outputPanel layout="block" style="text-align:center;">
	               			<h2>Display options:</h2>
	               			<br/><br/>
               			</apex:outputPanel>
               		</apex:facet>
               		
               		<apex:outputLabel value="Show Related Metadata?" for="showRelated" />
               		<apex:inputCheckbox value="{!erDiagram.showRelatedMetadata}" id="showRelated" />
               		
               		<apex:outputLabel value="Show Self References?" for="showSelfReferences" />
               		<apex:inputCheckbox value="{!erDiagram.showSelfReferences}" id="showSelfReferences" />
               		
               		<apex:outputLabel value="Show Fields?" for="showFields" />
               		<apex:inputCheckbox value="{!erDiagram.showFields}" id="showFields" />
               		
           		    <apex:selectList value="{!erDiagram.profile}" title="Profile" size="1" id="profiles">
                        <apex:selectOptions value="{!profiles}" />
                        <apex:actionSupport event="onchange" rerender="permSets" />
                    </apex:selectList>
                    
                    <apex:selectList value="{!erDiagram.permSet}" title="Permission Set" size="1" id="permSets">
                        <apex:selectOptions value="{!permSets}" />
                    </apex:selectList>
               	</apex:panelGrid>                        
                                       
                <apex:commandButton action="{!doCreateDiagram}" value="Create Diagram" />  
            </apex:pageBlockSection>
            
           <apex:pageBlockSection title="Save image as file or URL" columns="1" collapsible="false">
               You can either Right-Click save this image as file or just reuse the image URL. It contains all thats needed to display it dynamically.
            	<br/>
               <img class="plantuml" uml="{!erDiagram.plantUMLText}" />
           	</apex:pageBlockSection>
        </apex:pageBlock> 
    </apex:form>
    
    <apex:includeScript value="{!$Resource.jquery_min_js}" />
    <script type="text/javascript">
    
        <!-- Taken and slightly adapted to Salesforce from http://plantuml.sourceforge.net/jquery.html -->
        $j = jQuery.noConflict();
        
        $j(document).ready(function(){
            plantuml_runonce();
        });
                
        <!--  taken from https://github.com/johan/js-deflate -->
        function encode64(data) {
            r = "";
            for (i = 0; i < data.length; i += 3) {
                if (i + 2 == data.length) {
                    r += append3bytes(data.charCodeAt(i), data.charCodeAt(i + 1), 0);
                } else if (i + 1 == data.length) {
                    r += append3bytes(data.charCodeAt(i), 0, 0);
                } else {
                    r += append3bytes(data.charCodeAt(i), data.charCodeAt(i + 1), data.charCodeAt(i + 2));
                }
            }
            return r;
        }
        
        function append3bytes(b1, b2, b3) {
            c1 = b1 >> 2;
            c2 = ((b1 & 0x3) << 4) | (b2 >> 4);
            c3 = ((b2 & 0xF) << 2) | (b3 >> 6);
            c4 = b3 & 0x3F;
            r = "";
            r += encode6bit(c1 & 0x3F);
            r += encode6bit(c2 & 0x3F);
            r += encode6bit(c3 & 0x3F);
            r += encode6bit(c4 & 0x3F);
            return r;
        }
        
        function encode6bit(b) {
            if (b < 10) {
                return String.fromCharCode(48 + b);
            }
            b -= 10;
            if (b < 26) {
                return String.fromCharCode(65 + b);
            }
            b -= 26;
            if (b < 26) {
                return String.fromCharCode(97 + b);
            }
            b -= 26;
            if (b == 0) {
                return '-';
            }
            if (b == 1) {
                return '_';
            }
            return '?';
        }
        
        var deflater = window.SharedWorker && new SharedWorker('{!$Resource.rawdeflate_js}');
        if (deflater) {
            deflater.port.addEventListener('message', done_deflating, false);
            deflater.port.start();
        } else if (window.Worker) {
            deflater = new Worker('{!$Resource.rawdeflate_js}');
            deflater.onmessage = done_deflating;
        }
        
        function done_deflating(e) {
            var done = 0;
            $j("img").each(function () {
                if (done == 1) return;
                var u1 = $j(this).attr("src");
                if (u1 != null) return;
                var u2 = $j(this).attr("uml");
                if (u2 == "") return;
                $j(this).attr("src", "http://www.plantuml.com/plantuml/img/" + encode64(e.data));
                $j(this).attr("uml", "");
                done = 1;
            });
            plantuml_runonce();
        }
        
        function plantuml_runonce() {
            var done = 0;
            $j("img.plantuml").each(function () {
                if (done == 1) return;
                var u1 = $j(this).attr("src");
                if (u1 != null) return;
                var u2 = $j(this).attr("uml");
                if (u2 == "") return;
                var s = unescape(encodeURIComponent(u2));
                if (deflater) {
                    if (deflater.port && deflater.port.postMessage) {
                        deflater.port.postMessage(s);
                    } else {
                        deflater.postMessage(s);
                    }
                } else {
                    setTimeout(function () {
                        done_deflating({
                            data: deflate(s)
                        });
                    }, 100);
                }
                done = 1;
            });
        }
    </script>   
   
</apex:page>